### triwst/下のzsh,tmux,vimをコピー
function z_sync_origin() {
  cp -p ~/triwst/zshrc ~/.zshrc
  cp -p ~/triwst/tmux.conf ~/.tmux.conf
  cp -p ~/triwst/vimrc ~/.vimrc
  cp -rp ~/triwst/vim ~/.vim
  cp -rp ~/triwst/zfunc ~/.zfunc
  source ~/.zshrc
  echo "sync complete."
}

### triwst/下のzshrcをコピー
function z_sync_zsh() {
  cp -p ~/triwst/zshrc ~/.zshrc
  cp -rp ~/triwst/zshrc ~/.zfunc
  source ~/.zshrc
  echo "complete."
}

