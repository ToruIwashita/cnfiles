{
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "DISABLE_MICROCOMPACT": "1"
  },
  "permissions": {
    "allow": [
      "Bash(zsh:*)",
      "Bash(echo:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(source:*)",
      "Bash(git pull:*)",
      "Bash(git commit:*)",
      "Read(*)",
      "Edit(*)",
      "MultiEdit(*)",
      "Glob(*)",
      "Grep(*)",
      "LS(*)",
      "Task(*)",
      "TodoRead(*)",
      "TodoWrite(*)",
      "WebFetch(domain:docs.anthropic.com)",
      "Bash($AI_SEARCH_AGENT:*)"
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Read(.env.*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Write(.env*)",
      "Write(**/secrets/**)"
    ],
    "additionalDirectories": [
      "~/markdown_texts",
      "~/works/memolist"
    ]
  },
  "model": "opus",
  "outputStyle": "Explanatory",
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); current_dir=$(echo \"$input\" | jq -r '.workspace.current_dir // .cwd'); model=$(echo \"$input\" | jq -r '.model.display_name'); dir_name=$(basename \"$current_dir\"); cd \"$current_dir\" 2>/dev/null; if git rev-parse --is-inside-work-tree >/dev/null 2>&1; then branch=$(git symbolic-ref --short HEAD 2>/dev/null || echo 'detached'); printf \"\\033[1;33m(%s)\\033[0m [git|* \\033[32m%s\\033[0m]@%s\" \"$model\" \"$branch\" \"$dir_name\"; else printf \"\\033[1;33m(%s)\\033[0m []@%s\" \"$model\" \"$dir_name\"; fi"
  }
}
