## git関連関数
function ga() {
  local ga_usage arg
  local -a add_files

  ga_usage="Usage: $0 {File|-m 'File'|-u 'File'}"
  while getopts :m:u: arg; do
    case ${arg} in
      m) add_files=($add_files $OPTARG) ;;
      u) add_files=($add_files $OPTARG) ;;
      :|\?) print $ga_usage; return 2 ;;
    esac
  done

  shift $((OPTIND-1))
  git add $add_files $*
}
