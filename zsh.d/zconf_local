## 環境変数設定
readonly MYSQL_CNCT="mysql test"
readonly MYSQL_CMD="$MYSQL_CNCT -e"

export MYSQL_CNCT MYSQL_CMD
export PATH=${PATH}:~/nkf207:/usr/local/Cellar/rsense/0.3/libexec/bin  # nkfとrsense有りの時のサンプル
export LD_LIBRARY_PATH=${LD_LIBRARY_PATH}:~/local/lib  # ~/local/lib有りのサンプル(ライブラリ読み込み)

typeset -U PATH LD_LIBRARY_PATH

## エイリアス
# CD系
alias cdm="~/MEMOs"
# MYSQL系
alias my=$MYSQL_CNCT
alias myq=$MYSQL_CMD
alias myshow="$MYSQL_CMD 'SHOW TABLES'"
# VIM
alias vi="vim"

## グローバルエイリアス
alias -g TT=">! ~/works/tmp.txt"
