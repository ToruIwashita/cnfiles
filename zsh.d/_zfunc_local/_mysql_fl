## MYSQL関数用補完
function _my_show_tables() {
  compadd `eval "${MYSQL_CMD} 'SHOW TABLES' -N"`
}

function _myfindg() {
  _arguments : \
    '(:)-t[Table name]:Input a part of table name or table name:_my_show_tables' \
    '(:)-f[Field name]:A part of field name'
}

function _mydesc() {
  _arguments : \
    '(:)*:Input table name:_my_show_tables'
}

function _myfcsv() {
  _arguments : \
    '(:)*:Input table name:_my_show_tables'
}

compdef _myfindg myfindg
compdef _mydesc mydesc
compdef _myfcsv myfcsv
