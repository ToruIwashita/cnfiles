{
    "Prompt": ">>>",
    "StickySelection": true,
    "MaxScanBufferSize": 102400,
    "SingleKeyJump": {
        "ShowPrefix": true
    },
    "Action": {
        "SelectAllAndFinish": [
            "peco.SelectAll",
            "peco.Finish"
        ]
    },
    "Style": {
        "Basic": ["on_default", "default"],
        "SavedSelection": ["bold", "on_white", "black"],
        "Selected": ["on_cyan", "black"],
        "Query": ["white", "bold"],
        "Matched": ["blue", "on_yellow"]
    },
    "Keymap": {
        "C-a": "peco.BeginningOfLine",
        "C-b": "peco.BackwardChar",
        "C-c": "peco.Cancel",
        "C-d": "peco.DeleteForwardChar",
        "C-e": "peco.EndOfLine",
        "C-f": "peco.ForwardChar",
        "C-g": "peco.DeleteAll",
        "C-h": "peco.DeleteBackwardChar",
        "C-j": "peco.ScrollPageDown",
        "C-k": "peco.ScrollPageUp",
        "C-l": "peco.Finish",
        "C-n": "peco.SelectDown",
        "C-o": "peco.Finish",
        "C-p": "peco.SelectUp",
        "C-s": "peco.ToggleSingleKeyJump",
        "C-t": "SelectAllAndFinish",
        "C-u": "peco.DeleteForwardWord",
        "C-w": "peco.DeleteBackwardWord",
        "C-]": "peco.ToggleSelectionAndSelectNext",
        "C-_": "peco.RotateMatcher",
        "Esc": "peco.Cancel"
    }
}
